---
import AposArea from '@apostrophecms/astro-integration/components/AposArea.astro';
import dayjs from 'dayjs';

const { page, piece, user, query } = Astro.props.aposData;
const { main } = piece;
---

<section class="bp-content">
  <h1>{ piece.title }</h1>
  <h4>
    Released On { dayjs(piece.publishedAt).format('MMMM D, YYYY') }
  </h4>
  <AposArea area={main} />
</section>
